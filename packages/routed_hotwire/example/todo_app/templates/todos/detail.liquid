{% if todo %}
<section class="todo-detail">
  <style>
    .todo-detail {
      display: grid;
      gap: 1rem;
    }
    .todo-detail h2 {
      margin: 0;
      font-size: 1.35rem;
    }
    .todo-detail .meta {
      margin: 0;
      color: rgba(148, 163, 184, 0.85);
    }
    .todo-detail .notes {
      background: rgba(30, 41, 59, 0.5);
      border-radius: 0.75rem;
      padding: 1rem;
      line-height: 1.5;
      color: rgba(226, 232, 240, 0.9);
    }
    .todo-detail .actions {
      display: flex;
      gap: 0.75rem;
      flex-wrap: wrap;
    }
    .todo-detail button {
      border: none;
      border-radius: 999px;
      padding: 0.65rem 1.5rem;
      font-weight: 600;
      cursor: pointer;
      background: rgba(99, 102, 241, 0.85);
      color: #0f172a;
    }
    .todo-detail button.danger {
      background: rgba(248, 113, 113, 0.9);
      color: #0f172a;
    }
    .todo-detail.empty {
      text-align: center;
      color: rgba(148, 163, 184, 0.9);
    }
  </style>

  <h2>{{ todo.title }}</h2>
  <p class="meta">
    {{ todo.formatted_created_at }}
    {% if todo.completed %}â€¢ Completed{% endif %}
  </p>
  {% if todo.notes %}
    <div class="notes">
      {{ todo.notes }}
    </div>
  {% endif %}
  <div class="actions">
    <form action="/todos/{{ todo.id }}/toggle" method="post">
      <button type="submit">
        {% if todo.completed %}Mark as active{% else %}Mark as done{% endif %}
      </button>
    </form>
    <form action="/todos/{{ todo.id }}/delete" method="post" data-confirm-delete="true">
      <button type="submit" class="danger">Delete task</button>
    </form>
  </div>
</section>
{% else %}
<section class="todo-detail empty">
  <p>Select a task to see its details.</p>
</section>
{% endif %}
