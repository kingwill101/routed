<!doctype html>
<html data-turbo="true">
<head>
  <meta charset="utf-8">
  <title>routed_hotwire â€¢ Todos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://fonts.cdnfonts.com/css/inter">
  <link rel="preconnect" href="https://cdn.jsdelivr.net">
  <script src="https://cdn.jsdelivr.net/npm/@hotwired/turbo@8/dist/turbo.es2017-umd.js"></script>
  <meta name="turbo-stream-todos" content="{{ signed_stream }}">
  <script type="module" src="/assets/js/todo.js"></script>
  <style>
    :root {
      color-scheme: light;
    }
    body {
      margin: 0;
      font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
      background: #0f172a;
      color: #f8fafc;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    main {
      width: min(960px, 95vw);
      margin: 3rem auto;
      padding: 2rem 2.5rem;
      background: rgba(15, 23, 42, 0.9);
      border-radius: 1.25rem;
      box-shadow: 0 32px 80px rgba(15, 23, 42, 0.45);
      display: grid;
      gap: 1.5rem;
    }
    header h1 {
      margin: 0 0 0.35rem;
      font-weight: 700;
      letter-spacing: -0.02em;
    }
    header p {
      margin: 0;
      color: rgba(226, 232, 240, 0.8);
    }
    turbo-frame {
      display: block;
      border: 1px solid rgba(148, 163, 184, 0.35);
      border-radius: 1rem;
      padding: 1.25rem;
      background: rgba(15, 23, 42, 0.6);
    }
    turbo-frame + turbo-frame {
      margin-top: 0.5rem;
    }
    @media (min-width: 860px) {
      main {
        grid-template-columns: 2fr 1fr;
        grid-template-areas:
          "header header"
          "list detail"
          "form detail";
      }
      header {
        grid-area: header;
      }
      #todo_list {
        grid-area: list;
      }
      #todo_detail {
        grid-area: detail;
        min-height: 320px;
      }
      #todo_form {
        grid-area: form;
      }
    }
  </style>
</head>
<body>
  <main>
    <header>
      <h1>Routed Todos</h1>
      <p>Hotwire-style CRUD powered by routed and routed_hotwire.</p>
    </header>
    {{ stream_source }}
    {{ list_frame }}
    {{ detail_frame }}
    {{ form_frame }}
  </main>
</body>
</html>
