{% comment %}
  Search Form Component
  
  Usage:
    {% render 'components/search_form', form: form, search_query: search_query %}
    {% render 'components/search_form', form: form, search_query: search_query, show_clear: true %}
  
  Parameters:
    - form: The form object to render
    - search_query: Current search query value
    - show_clear: Whether to show clear button (default: true)
{% endcomment %}

{% assign show_clear = show_clear | default: true %}

<div class="mb-8">
    <form method="POST" class="flex gap-4">
        <!-- Render the form fields -->
        {{ form_html }}

        <button
                type="submit"
                class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors"
        >
            üîç Search
        </button>

        {% if show_clear and search_query != '' %}
            <a
                    href="/posts"
                    class="bg-gray-600 text-white px-6 py-2 rounded-md hover:bg-gray-700 transition-colors"
            >
                Clear
            </a>
        {% endif %}
    </form>
</div> 