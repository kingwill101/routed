{% comment %}
  Comment Form Component
  
  Usage:
    {% render 'components/comment_form', form: form %}
    {% render 'components/comment_form', form: form, success_message: success_message %}
  
  Parameters:
    - form: The comment form object
    - success_message: Optional success message to display
{% endcomment %}

<section class="mt-12 bg-white rounded-lg shadow-sm border p-8">
    <h3 class="text-2xl font-bold text-gray-900 mb-6">Leave a Comment</h3>

    {% if success_message %}
        <div class="mb-6 p-4 bg-green-50 border border-green-200 text-green-700 rounded-md">
            {{ success_message }}
        </div>
    {% endif %}

    <form method="POST" class="space-y-6">
        <!-- Render form using the form_html from FormViewMixin -->
        {{ form_html }}

        <div class="flex justify-end">
            <button
                    type="submit"
                    class="bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 transition-colors font-medium"
            >
                ðŸ’¬ Post Comment
            </button>
        </div>
    </form>
</section> 