{% layout 'base/layout' %}

{% block content %}
<div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">
                {{ page_title }}
            </h1>
            <p class="text-gray-600 mt-2">
                {{ page_description }}
            </p>
        </div>
        <a href="/posts/new" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
            ‚úçÔ∏è New Post
        </a>
    </div>

    <!-- Search Form using reusable component -->
    {% if show_search %}
        {% render 'components/search_form', form: form, search_query: search_query %}
    {% endif %}

    <!-- Results Info -->
    <div class="mb-6 text-gray-600">
        {% if search_query != '' %}
            Found {{ paginator.count }} result{% unless paginator.count == 1 %}s{% endunless %} for "{{ search_query }}"
        {% else %}
            Showing {{ paginator.count }} blog post{% unless paginator.count == 1 %}s{% endunless %}
        {% endif %}
    </div>

    <!-- Posts Grid using reusable component -->
    {% if object_list.size > 0 %}
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
            {% for post in object_list %}
                {% render 'components/post_card', post: post, show_actions: true, size: 'medium' %}
            {% endfor %}
        </div>

        <!-- Pagination using reusable component -->
        {% render 'components/pagination', paginator: paginator, search_query: search_query %}

    {% else %}
        <!-- Empty State -->
        <div class="text-center py-12">
            <div class="text-gray-400 text-6xl mb-4">üìù</div>
            <h3 class="text-xl font-medium text-gray-900 mb-2">
                {% if search_query != '' %}
                    No posts found
                {% else %}
                    No blog posts yet
                {% endif %}
            </h3>
            <p class="text-gray-600 mb-6">
                {% if search_query != '' %}
                    Try adjusting your search terms or browse all posts.
                {% else %}
                    Be the first to share your thoughts with the world!
                {% endif %}
            </p>
            <div class="space-x-4">
                {% if search_query != '' %}
                    <a href="/posts"
                       class="bg-gray-600 text-white px-6 py-2 rounded-md hover:bg-gray-700 transition-colors">
                        View All Posts
                    </a>
                {% endif %}
                <a href="/posts/new"
                   class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors">
                    Create First Post
                </a>
            </div>
        </div>
    {% endif %}
</div>

<script>
    function confirmDelete(postId, postTitle) {
        if (confirm(`Are you sure you want to delete "${postTitle}"?\n\nThis action cannot be undone.`)) {
            fetch(`/api/posts/${postId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showMessage(data.message, 'success');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1500);
                    } else {
                        showMessage('Error deleting post: ' + data.error, 'error');
                    }
                })
                .catch(error => {
                    showMessage('Error deleting post: ' + error.message, 'error');
                });
        }
    }

    function showMessage(message, type) {
        const messageEl = document.createElement('div');
        messageEl.className = `fixed top-4 right-4 p-4 rounded-md shadow-lg z-50 ${type === 'error' ? 'bg-red-50 text-red-700 border border-red-200' :
            'bg-green-50 text-green-700 border border-green-200'
        }`;
        messageEl.textContent = message;

        document.body.appendChild(messageEl);

        setTimeout(() => {
            messageEl.remove();
        }, 5000);
    }
</script>
{% endblock %}