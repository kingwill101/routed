{% layout 'base/layout' %}

{% block content %}
<div class="max-w-4xl mx-auto">
    <!-- Hero Section -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
            {{ page_title }}
        </h1>
        <p class="text-xl text-gray-600 mb-8">
            {{ page_description }}
        </p>

        <!-- Statistics using reusable component -->
        {% liquid
            assign stats = '' | split: ''
            assign stat1 = '{"value":' | append: total_posts | append: ',"label":"Total Posts","color":"blue"}' | parse_json
            assign stat2 = '{"value":' | append: published_posts | append: ',"label":"Published","color":"green"}' | parse_json
            assign stat3 = '{"value":' | append: features.size | append: ',"label":"Features","color":"purple"}' | parse_json
            assign stats = stats | push: stat1 | push: stat2 | push: stat3
        %}

        <div class="mb-8">
            {% render 'components/stats_cards', stats: stats %}
        </div>
    </div>

    <!-- Features Section using reusable component -->
    <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">
            🚀 Class View Features
        </h2>

        {% render 'components/feature_cards', features: features %}
    </div>

    <!-- Recent Posts Section using reusable component -->
    {% if recent_posts.size > 0 %}
        <div class="mb-12">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold text-gray-900">
                    📝 Recent Posts
                </h2>
                <a href="/posts" class="text-blue-600 hover:text-blue-700 font-medium">
                    View all posts →
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for post in recent_posts %}
                    {% render 'components/post_card', post: post, size: 'small' %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
    <!-- Newsletter Signup Section using reusable component -->
    {% render 'components/newsletter_form', form: form, success_message: success_message %}
    <!-- Get Started Section -->
    <div class="mt-12 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-8 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">
            Ready to explore?
        </h2>
        <p class="text-gray-600 mb-6">
            Check out the full CRUD functionality and see how class_view makes web development clean and efficient.
        </p>
        <div class="space-x-4">
            <a href="/posts"
               class="bg-blue-600 text-white px-6 py-3 rounded-md hover:bg-blue-700 transition-colors inline-block">
                Browse Posts
            </a>
            <a href="/posts/new"
               class="bg-white text-blue-600 px-6 py-3 rounded-md border border-blue-600 hover:bg-blue-50 transition-colors inline-block">
                Create Post
            </a>
            <a href="/widgets"
               class="bg-purple-600 text-white px-6 py-3 rounded-md hover:bg-purple-700 transition-colors inline-block">
                🎨 Widget Showcase
            </a>
        </div>
    </div>
</div>
{% endblock %}