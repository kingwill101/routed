{% comment %}
  Post Meta Component
  
  Usage:
    {% render 'components/post_meta', post: post %}
    {% render 'components/post_meta', post: post, size: 'large' %}
    {% render 'components/post_meta', post: post, show_updated: true %}
  
  Parameters:
    - post: The post object
    - size: 'small', 'medium', or 'large' (default: 'medium')
    - show_updated: Whether to show updated date (default: false)
{% endcomment %}

{% assign size = size | default: 'medium' %}
{% assign show_updated = show_updated | default: false %}

<div class="flex {% if size == 'large' %}flex-wrap{% endif %} items-center gap-{% if size == 'large' %}6{% else %}4{% endif %} text-{% if size == 'large' %}sm{% else %}sm{% endif %} text-gray-500 mb-{% if size == 'large' %}6{% else %}4{% endif %}">
    <div class="flex items-center gap-2">
        <span>👤</span>
        <span>{{ post.author }}</span>
    </div>

    <div class="flex items-center gap-2">
        <span>📅</span>
        {% if size == 'large' %}
            <span>{{ post.createdAt | date: '%B %d, %Y at %I:%M %p' }}</span>
        {% else %}
            <span>{{ post.createdAt | date: '%B %d, %Y' }}</span>
        {% endif %}
    </div>

    {% if show_updated and post.updatedAt != post.createdAt %}
        <div class="flex items-center gap-2">
            <span>✏️</span>
            <span>Updated {{ post.updatedAt | date: '%B %d, %Y' }}</span>
        </div>
    {% endif %}

    <div class="flex items-center gap-2">
        {% if post.isPublished %}
            <span class="text-green-600">✅ Published</span>
        {% else %}
            <span class="text-orange-600">📝 Draft</span>
        {% endif %}
    </div>
</div>
