{% comment %}
  Feature Cards Component
  
  Usage:
    {% render 'components/feature_cards', features: features_array %}
    {% render 'components/feature_cards', features: features_array, columns: 2 %}
  
  Parameters:
    - features: Array of feature objects with title, description, and icon
    - columns: Number of columns (1-4, default: 3)
{% endcomment %}

{% assign columns = columns | default: 3 %}

<div class="grid grid-cols-1 {% if columns >= 2 %}md:grid-cols-2{% endif %} {% if columns >= 3 %}lg:grid-cols-3{% endif %} {% if columns >= 4 %}xl:grid-cols-4{% endif %} gap-6">
    {% for feature in features %}
        <div class="bg-white p-6 rounded-lg shadow-sm border hover:shadow-md transition-shadow">
            <div class="text-2xl mb-3">{{ feature.icon }}</div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
                {{ feature.title }}
            </h3>
            <p class="text-gray-600">
                {{ feature.description }}
            </p>
        </div>
    {% endfor %}
</div> 