{% render "partials/header.liquid" %}

<h1>Uploaded Files</h1>

<div class="file-list">
    {% if files %}
        <table>
            <thead>
                <tr>
                    <th>Filename</th>
                    <th>Size</th>
                    <th>Modified</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for file in files %}
                    <tr>

                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No files uploaded yet.</p>
    {% endif %}
</div>

<div class="links">
    <a href="/">Upload New File</a>
</div>

{% render "partials/footer.liquid" %}